<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="movement_enabled"
        android:summary="@string/pref_description_movement"
        android:title="@string/pref_title_movement" />

    <EditTextPreference
        android:defaultValue="1.0"
        android:inputType="numberDecimal"
        android:key="movement_x"
        android:summary="@string/pref_description_movement_x"
        android:title="@string/pref_title_movement_x" />

    <EditTextPreference
        android:defaultValue="1.0"
        android:inputType="numberDecimal"
        android:key="movement_y"
        android:summary="@string/pref_description_movement_y"
        android:title="@string/pref_title_movement_y" />

    <EditTextPreference
        android:defaultValue="1.0"
        android:inputType="numberDecimal"
        android:key="movement_z"
        android:summary="@string/pref_description_movement_z"
        android:title="@string/pref_title_movement_z" />

</PreferenceScreen>
